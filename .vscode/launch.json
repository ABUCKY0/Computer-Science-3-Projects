// .vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "C++ Debug",
        "type": "cppdbg",
        "request": "launch",
        "program": "${fileDirname}/run.out", // Replace with your actual binary name
        "args": [],
        "stopAtEntry": false,
        "cwd": "${fileDirname}", // Set the working directory to the open file's directory
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "C++ Build",
        "miDebuggerPath": "/usr/bin/gdb"  // Replace with the path to your GDB executable
      }
    ]
  }
  