{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C++ Build",
            "type": "cppbuild",
            "command": "g++",
            "args": [
                "-g",
                "*.cpp",
                "-o",
                "run.out"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "compounds": [
        {
            "label": "C++ Build and Run",
            "preLaunchTask": "C++ Build",
            "tasks": [
                "C++ Run"
            ]
        }
    ]
}